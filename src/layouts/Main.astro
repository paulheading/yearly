---
import "~styles/global.scss";
import { Head, Container, Banner } from "paully";
import useLiveData from "~scripts/services/useLiveData";
---

<script>
  import "focus-visible/dist/focus-visible.min.js";
</script>

<script src="~scripts/layouts/main.js"></script>

<html lang="en">
  <Head {...Astro.props} />
  <body data-state="visible">
    {
      !useLiveData && (
        <Banner className="offline-banner">
          <em>OFFLINE MODE</em>
        </Banner>
      )
    }
    <Container top="0rem" bottom="0rem">
      <header></header>
      <slot />
      <footer></footer>
    </Container>
  </body>
</html>

<style lang="scss">
  @use "~mixins" as *;

  header,
  footer {
    height: toRem(100);
  }

  .offline-banner {
    background-color: blue;
  }
</style>
