---
import SelectForm from "~components/SelectForm";
import $cy from "~scripts/selectors/$cy";

import { source } from "~data/store/playlist"

let { choose_source } = $cy.selectForm;

let data = {
  snake: choose_source,
  state: "closed",
  type: "select",
  setting: true,
  group: null,
  card: null,
};

let props = {
  options: [{ title: source.title, data: source.id }],
  label: "Source",
  title: source.title,
  value: source.id,
  data,
};
---

<SelectForm {...props} className="o" />

<style lang="scss">
  @use "~mixins" as *;

  .o {
    margin-top: 2rem;
  }
</style>
