---
import Section from "~components/Section";

let sectionProps = {
  name: "confirm-settings",
  style: {
    marginBottom: "3rem",
    display: "none",
  },
};
---

<Section {...sectionProps}>
  <div class="box"></div>
</Section>

<style lang="scss">
  @use "~mixins" as *;

  $gray: #4d4d4d;
  $margin: 0.375rem;
  $radius: $margin * 2;

  .box {
    border: 1px dashed $gray;
    border-radius: $radius;
    display: inline-block;
    padding: $margin;
    font-size: 1rem;
    color: $gray;
  }

  .setting {
    border: 1px solid $gray;
    border-radius: $margin;
    display: inline-block;
    padding: $radius;
    margin: $margin;
  }
</style>
