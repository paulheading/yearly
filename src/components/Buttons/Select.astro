---
import { SolidButton } from "paully";
import cnames from "~scripts/selectors/cnames";
---

<SolidButton className={cnames.button.select}>Select</SolidButton>

<style lang="scss">
  @use "~mixins" as *;

  .select_button {
    margin-top: $margin-bottom-card-header;
    fill: currentColor;
    width: 100%;
  }

  .select_button.selected-state {
    background-color: white;
    border-color: white;
    font-weight: bold;
    color: green;

    @include focus {
      @include double-box(white);
    }
  }
</style>
