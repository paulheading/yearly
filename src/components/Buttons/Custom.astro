---
import { InvisibleButton } from "paully";
import { button } from "~scripts/selectors/classNames";
---

<InvisibleButton className={button.custom}>
  <u><slot /></u>
</InvisibleButton>

<style lang="scss">
  @use "~mixins" as *;

  .custom_button {
    padding: 0.25rem;

    @include focus {
      background-color: black;
      color: white;
      outline: none;
    }
  }
</style>
