---
import { InvisibleButton } from "paully";
import cnames from "#selectors/cnames";
---

<InvisibleButton className={cnames.button.custom}>
  <u><slot /></u>
</InvisibleButton>

<style lang="scss">
  @use "#mixins" as *;

  .custom_button {
    padding: 0.25rem;

    @include focus {
      background-color: black;
      color: white;
      outline: none;
    }
  }
</style>
