---
import { Loaded, Loader, NotLoaded, Wrap } from "paully";
import Layout from "~layouts/Main";
import SavePlaylistSection from "~sections/SavePlaylist";
import SharePlaylistSection from "~sections/SharePlaylist";
import EmptyPlaylistSection from "~sections/EmptyPlaylist";
import RecommendTracks from "~sections/RecommendTracks";
import TracksAdded from "~sections/TracksAdded";

import { seo } from "paully/data";

let layoutProps = {
  title: "Save | Yearly | Songs you discovered this year",
  keywords: seo.keywords("yearly, spotify, songs, discover"),
  description: "I'm a " + seo.job.title + ". " + seo.job.description,
};
---

<script src="~scripts/pages/save.js"></script>

<Layout {...layoutProps}>
  <Wrap style={{ textAlign: "center" }}>
    <NotLoaded>
      <Loader style={{ margin: "auto" }} />
      <TracksAdded />
    </NotLoaded>
    <Loaded>
      <SavePlaylistSection />
      <SharePlaylistSection />
      <EmptyPlaylistSection />
      <RecommendTracks />
    </Loaded>
  </Wrap>
</Layout>
